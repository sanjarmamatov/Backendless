<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thirtyseven.floats.Main2Activity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/strt"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Улица" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/type"
        android:layout_below="@+id/strt"
        android:layout_centerHorizontal="true"
        android:hint="Тип аппартаментов" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/number"
        android:layout_below="@+id/type"
        android:layout_centerHorizontal="true"
        android:hint="Номер квартиры" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/floor"
        android:inputType="numberSigned"
        android:layout_below="@+id/number"
        android:layout_centerHorizontal="true"
        android:hint="Этаж" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/count"
        android:inputType="numberSigned"
        android:layout_below="@+id/floor"
        android:layout_centerHorizontal="true"
        android:hint="Количество комнат" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:layout_below="@+id/count"
        android:layout_centerHorizontal="true" />

</RelativeLayout>